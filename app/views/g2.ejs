<!DOCTYPE html>
<html lang="en">
    <%- include ('Layout/header'); -%>
    <body id="page-top">
        <!-- Navigation-->
        <%- include ('Layout/navbar'); -%>
        <!-- Masthead-->
        <!-- About-->
        
        <!-- Signup-->
        <section class="signup-section" id="signup">
            <div class="container px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5">
                    <div class="section">
                       
                        
                       
                            <style>
                               
                                .section {
                                    margin-bottom: 20px;
                                    text-align: center;
                                }
                                .section h2 {
                                    margin-bottom: 10px;
                                }
                                label {
                                    display: block;
                                    margin-bottom: 5px;
                                    color: wheat;
                                }

                                .message {
                                    display: block;
                                    margin-bottom: 20px;
                                    text-align: center;
                                    color: wheat;
                                }

                                input[type="text"],
                                input[type="number"],
                                input[type="email"],
                                input[type="date"] {
                                    width: 40%;
                                    padding: 8px;
                                    margin-bottom: 10px;
                                    border: 1px solid #ccc;
                                    border-radius: 5px;
                                }
                                input[type="submit"] {
                                    padding: 10px 20px;
                                    border: none;
                                    border-radius: 5px;
                                    background-color: #007bff;
                                    color: #fff;
                                    cursor: pointer;
                                    width: auto;
                                    margin: auto;
                            
                                }
                                input[type="submit"]:hover {
                                    background-color: #0056b3;
                                }
                            </style>

<h2>Personal Information</h2>
<form action="/submit_g2" method="post">
    <label for="firstName">First Name:</label>
    <input type="text" id="firstName" name="firstName" pattern="[A-Za-z]+" title="Only alphabetic characters are allowed" required>
    
    <label for="lastName">Last Name:</label>
    <input type="text" id="lastName" name="lastName" pattern="[A-Za-z]+" title="Only alphabetic characters are allowed" required>
        
    <label for="Email">Email:</label>
    <input type="email" id="email" name="email" title="Only alphabetic characters are allowed" required>
    
    <label for="licenseNumber">License Number:</label>
    <input type="text" id="licenseNumber" name="licenseNumber" pattern="[A-Za-z0-9]{8}" title="Must be 8 characters alphanumeric" required>
    
    <label for="age">Age:</label>
    <input type="number" id="age" name="age" min="18" max="100" required>
    
    <label for="dob">Date of Birth:</label>
    <input type="date" id="dob" name="dob" required>

    <div class="section">
        <h2>Car Information</h2>
        <label for="make">Make:</label>
        <input type="text" id="make" name="make" required>
        
        <label for="model">Model:</label>
        <input type="text" id="model" name="model" required>
        
        <label for="year">Year:</label>
        <input type="number" id="year" name="year" min="1900" max="2099" required>
        
        <label for="plateNumber">Plate Number:</label>
        <input type="text" id="plateNumber" name="plateNumber" required>
    </div>

    <input type="submit" value="Submit Request">
</form>

<!-- Display success/error message -->
<% if (message) { %>
    <div class="message">
        <%= message %>
    </div>
<% } %>



                           
                </div>
                </div>
            </div>
        </section>
        <!-- Contact-->
        <section class="contact-section bg-black">
            <div class="container px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5">
                    <div class="col-md-4 mb-3 mb-md-0">
                        <div class="card py-4 h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-map-marked-alt text-primary mb-2"></i>
                                <h4 class="text-uppercase m-0">Address</h4>
                                <hr class="my-4 mx-auto" />
                                <div class="small text-black-50">333 Pearl St, Brantford , Ontario</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3 mb-md-0">
                        <div class="card py-4 h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-envelope text-primary mb-2"></i>
                                <h4 class="text-uppercase m-0">Email</h4>
                                <hr class="my-4 mx-auto" />
                                <div class="small text-black-50"><a href="#!">drive.test@gmail.org</a></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3 mb-md-0">
                        <div class="card py-4 h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-mobile-alt text-primary mb-2"></i>
                                <h4 class="text-uppercase m-0">Phone</h4>
                                <hr class="my-4 mx-auto" />
                                <div class="small text-black-50">+1 (519)781-4715</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="social d-flex justify-content-center">
                    <a class="mx-2" href="#!"><i class="fab fa-twitter"></i></a>
